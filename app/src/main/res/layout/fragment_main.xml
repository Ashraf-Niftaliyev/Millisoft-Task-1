<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainFragment"
    android:background="@color/darkWhite">

    <ImageView android:id="@+id/icon1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/menu"/>

    <ImageView android:id="@+id/icon2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/notfication_icon"/>

    <TextView android:id="@+id/welcomeBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icon1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:textSize="16sp"
        android:text="Welcome back,"
        android:textColor="@color/darkGray"/>
    
    <TextView android:id="@+id/UserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/welcomeBack"
        app:layout_constraintTop_toBottomOf="@id/welcomeBack"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:hint="Alexander Smith"/>

    <TextView android:id="@+id/chooseServise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/UserName"
        app:layout_constraintTop_toBottomOf="@id/UserName"
        android:layout_marginTop="30dp"
        android:text="CHOOSE SERVICE"
        android:textColor="@color/darkGray"
        android:textSize="18sp"/>

    <ImageView android:id="@+id/card1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/chooseServise"
        app:layout_constraintTop_toBottomOf="@id/chooseServise"
        android:layout_marginTop="10dp"
        android:src="@drawable/card1"/>

    <ImageView android:id="@+id/card2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/card1"
        app:layout_constraintTop_toTopOf="@id/card1"
        android:layout_marginStart="40dp"
        android:src="@drawable/card2"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/bottomCardView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/bottom_card_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView android:id="@+id/recentTickets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/chooseServise"
        app:layout_constraintTop_toTopOf="@id/bottomCardView"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:textColor="@color/darkGray"
        android:text="RECENT TICKETS"/>

    <CheckBox android:id="@+id/checkBox"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recentTickets"
        android:layout_marginStart="33dp"
        android:layout_marginTop="33dp"
        android:buttonTint="@color/blue"/>

    <TextView android:id="@+id/signInstallation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/checkBox"
        app:layout_constraintTop_toBottomOf="@id/recentTickets"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="Sign Installation"/>
    
    <TextView android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/signInstallation"
        app:layout_constraintTop_toBottomOf="@id/signInstallation"
        android:layout_marginTop="8dp"
        android:textColor="@color/darkGray"
        android:textSize="17sp"
        android:text="4227 Jail Drive, Pekin"/>

    <TextView android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/signInstallation"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="10dp"
        android:text="06/01/21"
        android:textSize="16sp"
        android:textColor="@color/black"/>
    

</androidx.constraintlayout.widget.ConstraintLayout>